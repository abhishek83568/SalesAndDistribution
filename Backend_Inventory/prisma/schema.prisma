generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inventory {
  inventoryId  String   @id @default(uuid())
  productId    String   // Foreign key to Product (if exists)

  location     String
  stockLevel   Int
  reorderLevel Int
  safetyStock  Int
  lotNumber    String @unique

  warehouses   Warehouse[] // One inventory can have multiple warehouses
  movements    ProductMovement[] // One inventory can have multiple product movements
}

model Warehouse {
  warehouseId      String   @id @default(uuid())  
  inventoryId      String   // Foreign key from Inventory
  inventory        Inventory @relation(fields: [inventoryId], references: [inventoryId])

  warehouseName    String
  warehouseAddress String
  warehouseCapacity Int
  warehouseType    WarehouseType  

  movements        ProductMovement[] // One warehouse can have multiple movements
}

enum WarehouseType {
  OWNED
  THIRDPARTY
}

model ProductMovement {
  movementId         String   @id @default(uuid())
  
  inventoryId        String  
  inventory          Inventory @relation(fields: [inventoryId], references: [inventoryId])

  warehouseId        String  
  warehouse          Warehouse @relation(fields: [warehouseId], references: [warehouseId])

  sourceLocation     String
  destinationLocation String
  quantity           Int
  movementDate       DateTime
}
